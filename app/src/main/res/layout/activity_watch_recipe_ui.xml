<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.xp2_2017.battlefood.RegistrationUI">

    <Button
        android:id="@+id/menuWRUI"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:drawable/screen_background_light_transparent"
        android:lineSpacingExtra="20sp"
        android:rotation="90"
        android:text="|||"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="2dp" />

    <TextView
        android:id="@+id/textChildContent"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Child Content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textTimeContent" />

    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:text="Instruction:"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/textIngredients" />

    <TextView
        android:id="@+id/textChild"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:text="Child:"
        app:layout_constraintRight_toLeftOf="@+id/textChildContent"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textParentContent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.818"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textTimeContent" />

    <TextView
        android:id="@+id/textAdult"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:text="Adult:"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textWorktime" />

    <TextView
        android:id="@+id/textIngredient"
        android:layout_width="79dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Ingredients:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAdult" />

    <TextView
        android:id="@+id/textTimeContent"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:text="Minutas"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textWorktime"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/ImageViewRecipe"
        app:layout_constraintHorizontal_bias="0.382" />

    <TextView
        android:id="@+id/textIngredients"
        android:layout_width="285dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toRightOf="@+id/textIngredients"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textChild"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textParentContent"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:text="Parent Content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textAdult"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textWorktime" />

    <TextView
        android:id="@+id/textInstructions"
        android:layout_width="287dp"
        android:layout_height="126dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="55dp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textInstruction"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textIngredients"
        tools:layout_editor_absoluteX="116dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textWorktime"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:text="Working time:"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/ImageViewRecipe" />

    <ImageView
        android:id="@+id/ImageViewRecipe"
        android:layout_width="364dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/food_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="181dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
